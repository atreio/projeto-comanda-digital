@model ComandaDigital.Dtos.ItemPedidoListDto;
@using ComandaDigital.Helpers
@using ComandaDigital.Enums;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Salão</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">
                <div class="tab-content">
                    <h5 class="mt-0 tituloCard">Listagem de pedidos concluidos</h5>
                    <table id="tableMesas" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Nome do cliente</th>
                                <th>Garçon</th>
                                <th>Descrição</th>
                                <th>Dtata/Hora</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ItensPedidos)
                            {
                                @if (item.Status.Equals(StatusPedido.Concluido))
                                {
                                    <tr>
                                        <td style="text-align:center;">@item.Pedido.ClienteNome</td>
                                        <td style="text-align:center;">@item.Pedido.Garcom.Nome</td>
                                        <td style="text-align:center;">@item.Descricao</td>
                                        <td style="text-align:center;">@item.DataAtualizacao</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div>