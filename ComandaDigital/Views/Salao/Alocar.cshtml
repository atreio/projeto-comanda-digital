@model ComandaDigital.Dtos.MesaDto
@using System.Security.Claims
@using ComandaDigital.Helpers
@{
    ViewData["Title"] = "Alocar";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Alocar Cliente</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">
                <!form id="formAlocar" action="@Url.Action("SalvaAlocacao")" method="post">
                    <input type="hidden" name="mesaId" value="@Model.Id" />
                    <input type="hidden" name="garcomId" value="@UsuarioConectadoHelper.GetId((User.Identity as ClaimsIdentity))" />
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label>Mesa</label>
                            <input type="text" class="form-control" name="mesaNumero" value="@Model.Numero" readonly />
                        </div>
                        <div class="form-group col-md-5">
                            <label>Nome Cliente</label>
                            <input type="text" class="form-control" name="clienteNome" data-validacao="inputObrigatoria|Nome Cliente" />
                        </div>
                        <div class="form-group col-md-5">
                            <label>Documento Cliente</label>
                            <input type="text" class="form-control" name="clienteDocumento" data-validacao="inputObrigatoria|Documento Cliente" />
                        </div>
                    </div> <!-- end row -->
                </!form> <!-- end form -->
                <div class="button-items">
                    <div class="form-group">
                        <div>
                            <a class="btn btn-info" href="#" onclick="validarForm('formAlocar')"><i class="fa fa-save"></i> SALVAR</a>
                            <a class="btn btn-secondary" href="@Url.Action("Index")"><i class="fa fa-backward"></i> VOLTAR</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div>