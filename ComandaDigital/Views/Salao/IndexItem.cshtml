@model ComandaDigital.Dtos.ItemPedidoListDto;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Salão</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">
                <div class="tab-content">
                    <h5 class="mt-0 tituloCard">Listagem de pedidoss</h5>
                    <table id="tableMesas" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Nome do cliente</th>
                                <th>Garçon</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ItensPedidos)
                            {
                                <tr>
                                    <td>@item.Pedido.ClienteNome</td>
                                    <td style="text-align:center;">@item.Pedido.Garcom.Nome</td>
                                    <td style="text-align:center;">
                                        <a href="@Url.Action("EditaItem", "Salao", new { id = item.Id })">Add itens</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="button-items">
                        <div class="form-group">
                            <div>
                                <a class="btn btn-primary" href="@Url.Action("NovoFamiliar", "Hospede", new { pedidoId = Model.PedidoId })"><i class="fa fa-plus-square"></i> Novo Item</a>                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div>