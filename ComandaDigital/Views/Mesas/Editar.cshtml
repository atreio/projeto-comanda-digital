@model ComandaDigital.Dtos.MesaDto;
@{
    ViewData["Title"] = "Mesas";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Cadastro de Mesas</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">
                <h5 class="mt-0 tituloCard">@(Model.Id <= 0 ? "Novo " : "Editar ") Mesas</h5>
                <!form id="formMesa" action="@Url.Action("Salva", "Mesas")" method="post">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Numero da mesa</label>
                            <input type="text" class="form-control" name="Numero" value="@Model.Numero" data-validacao="inputObrigatoria|Numero">
                        </div>
                        <div class="form-group col-md-4">
                            <label>Quantidade de lugares</label>
                            <input type="text" class="form-control" name="Quantidade" value="@Model.Quantidade" data-validacao="inputObrigatoria|Quantidade">
                        </div>
                        <div class="form-group col-md-4">
                            <label>Descrição</label>
                            <input type="text" class="form-control" name="Descricao" value="@Model.Descricao">
                        </div>
                    </div> <!-- end row -->
                </!form> <!-- end form -->
                <div class="button-items">
                    <div class="form-group">
                        <div>
                            <a class="btn btn-info" href="#" onclick="validarForm('formMesa')"><i class="fa fa-save"></i> SALVAR</a>
                            <a class="btn btn-secondary" href="@Url.Action("Index", "Mesas", new { Area = "" })"><i class="fa fa-backward"></i> VOLTAR</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->