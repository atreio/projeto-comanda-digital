@model ComandaDigital.Dtos.ItemPedidoDto;
@{
    ViewData["Title"] = "Itens pedidos";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Cadastro de Itens pedidos</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link show" href="@Url.Action("Editar", "Pedidos", new { Area = "", id = Model.PedidoId })" role="tab" aria-selected="true">Pedidos</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link active @(Model.Id <= 0 ? "disabled " : string.Empty) " href="@(Model.Id <= 0 ? "# " : Url.Action("EditarItemPedido", "Pedidos", new { Area = "", id = Model.PedidoId }))" role="tab" aria-selected="true">Itens pedidos</a>
                    </li>
                </ul>
                <h5 class="mt-0 tituloCard">@(Model.Id <= 0 ? "Novo " : "Editar ") Itens</h5>
                <!form id="formPedido" action="@Url.Action("SalvaItem", "Itens pedidos")" method="post">
                    <input type="hidden" name="HospedeId" value="@Model.PedidoId" />
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Nome do item</label>
                            <select class="form-control" name="ProdutoId" data-validacao="selectObrigatorio|Produto">
                                <option value="">Selecione o item</option>
                                @foreach (var nomeProduto in Model.Produtos)
                                {
                                    <!option value="@nomeProduto.ID" @(Model.ProdutoId == nomeProduto.ID ? "selected" : string.Empty)>@nomeProduto.Nome</!option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Numero do garçom</label>
                            <select class="form-control" name="GarcomId" data-validacao="selectObrigatorio|Garçom">
                                <option value="">Selecione a mesa</option>
                                @foreach (var nomeGarçom in Model.Usuarios)
                                {
                                    <!option value="@nomeGarçom.Id" @(Model.UsuarioId == nomeGarçom.Id ? "selected" : string.Empty)>@nomeGarçom.Nome</!option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Quantidade</label>
                            <input type="text" class="form-control" name="Quantidade" value="@Model.Quantidade">
                        </div>
                    </div> <!-- end row -->
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Observações</label>
                            <input type="text" class="form-control" name="Descricao" value="@Model.Descricao">
                        </div>
                    </div>
                </!form> <!-- end form -->
                <div class="button-items">
                    <div class="form-group">
                        <div>
                            <a class="btn btn-info" href="#" onclick="validarForm('formPedido')"><i class="fa fa-save"></i> SALVAR</a>
                            <a class="btn btn-secondary" href="@Url.Action("Index", "Pedidos", new { Area = "" })"><i class="fa fa-backward"></i> VOLTAR</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->