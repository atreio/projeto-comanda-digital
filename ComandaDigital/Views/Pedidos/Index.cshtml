@model ComandaDigital.Dtos.PedidoListDto;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Pedidos</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">
                <div class="tab-content">
                    <h5 class="mt-0 tituloCard">Listagem de pedidos</h5>
                    <table id="tableMesas" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Nome do cliente</th>
                                <th>Nome do Garçom</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pedidos in Model.Pedidos)
                            {
                            <tr>
                                <td>@pedidos.ClienteNome</td>
                                <td>@pedidos.Garcom.Nome</td>
                                <td style="text-align:center;">
                                    <a href="@Url.Action("EditaItem", "Pedidos", new { pedidoId = pedidos.Id })">Add Itens</a>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div>